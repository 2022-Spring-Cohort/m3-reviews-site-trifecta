@model Product
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>@Model.Brand - @Model.Model</h1>

<ul>
    <li>
        OS Ver: @Model.OSVer
    </li>
    <li>
        Release Date: @Model.ReleaseDate.ToString("MMM yyyy")
    </li>
    <li>
        Price: @Model.Price.ToString("C2")
    </li>
</ul>
<a href="/Product/Update/@Model.Id">Edit</a>|
<a href="/Product/Remove/@Model.Id">Remove</a>|
<a href="/Review/Add/@Model.Id">Add Review</a>

<ul>
    @foreach (Review review in Model.Reviews)
    {
        <li><a href="/Review/Detail">@review.Title</a> | @review.Rating
        <a href="/Review/Edit/@review.Id">Edit</a>
        <a href="/Review/Delete/@review.Id">Delete</a></li>
    }
</ul>
